---
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
  image?: string;
}

const {
  title = 'Carlos Carrillo | Data Engineer & Software Developer',
  description = 'Portfolio of Carlos Carrillo — Data Engineer specializing in Python, SQL, Snowflake, Azure, and AI/ML solutions. Explore my projects, skills, and certifications.',
  image = '/og-image.png',
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang="en" class="scroll-smooth dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="canonical" href={canonicalURL} />

    <!-- SEO -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="author" content="Carlos Carrillo" />
    <meta name="keywords" content="Data Engineer, Python, SQL, Snowflake, Azure, AI, ML, Portfolio" />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image, Astro.site)} />
    <meta property="og:locale" content="en_US" />
    <meta property="og:locale:alternate" content="es_MX" />
    <meta property="og:locale:alternate" content="de_DE" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={new URL(image, Astro.site)} />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=JetBrains+Mono:wght@400;500&display=swap"
      rel="stylesheet"
    />

    <!-- Cloudflare Turnstile (invisible) -->
    <script src="https://challenges.cloudflare.com/turnstile/v0/api.js" async defer></script>

    <!-- Cloudflare Web Analytics — UPDATE token -->
    <!-- <script defer src="https://static.cloudflareinsights.com/beacon.min.js" data-cf-beacon='{"token": "YOUR_TOKEN"}'></script> -->

    <!-- Theme: prevent FOUC – default to dark -->
    <script is:inline>
      (function () {
        // v2: reset stale theme from previous testing
        if (localStorage.getItem('theme-v') !== '2') {
          localStorage.removeItem('theme');
          localStorage.setItem('theme-v', '2');
        }
        var saved = localStorage.getItem('theme');
        var isDark = saved ? saved === 'dark' : true;
        document.documentElement.classList.toggle('dark', isDark);
      })();
    </script>

    <!-- JSON-LD Structured Data -->
    <script
      type="application/ld+json"
      set:html={JSON.stringify({
        '@context': 'https://schema.org',
        '@type': 'Person',
        name: 'Carlos Carrillo',
        url: 'https://www.dataqbs.com',
        jobTitle: 'AI-Driven Engineer | Data · Developer · DBA',
        description: 'Senior Data Engineer with 20+ years of experience in Snowflake, Azure SQL, Python, and AI-assisted development.',
        knowsAbout: ['Data Engineering', 'Python', 'SQL', 'Snowflake', 'Azure', 'AI/ML', 'ETL', 'Cloud Architecture'],
        sameAs: ['https://github.com/CarlosCaPe', 'https://linkedin.com/in/carlosalbertocarrillo'],
        address: {
          '@type': 'PostalAddress',
          addressCountry: 'MX',
        },
        worksFor: {
          '@type': 'Organization',
          name: 'dataqbs',
          url: 'https://www.dataqbs.com',
        },
      })}
    />
  </head>
  <body>
    <slot />
  </body>
</html>
