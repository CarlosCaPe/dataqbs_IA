{
  "python.testing.pytestEnabled": true,
  "python.testing.unittestEnabled": false,
  "python.formatting.provider": "black",
  "editor.formatOnSave": true,
  "files.trimTrailingWhitespace": true,
  "python.analysis.typeCheckingMode": "basic",
  "python.poetryPath": "poetry",
  "python.defaultInterpreterPath": "python3",
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "terminal.integrated.defaultProfile.linux": "bash",
  "terminal.integrated.env.linux": {
    "PATH": "/var/data/python/bin:${env:HOME}/.local/bin:${env:PATH}"
  },
  "python-envs.defaultEnvManager": "ms-python.python:system",
  "python-envs.pythonProjects": [
    {
      "path": "",
      "envManager": "ms-python.python:system",
      "packageManager": "ms-python.python:pip"
    }
  ],
  // Inject variables from .env files into terminals started by Python extension
  "python.terminal.useEnvFile": true,
  // Allow tasks to run automatically without confirmation prompt
  "task.allowAutomaticTasks": "on"
}